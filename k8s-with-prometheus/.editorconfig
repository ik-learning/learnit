# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.tf]
indent_size = 2
indent_style = space

[*.{yml, yaml}]
indent_style = space
indent_size = 2

[*.{json,tpl}]
indent_style = space
indent_size = 2

[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2
